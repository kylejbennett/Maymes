<div class="center">
	<h1>Add a new Dish</h1>
	<div class="new-form">
		<%= form_for Dish.new do |f| %>
			<div class="form-section">
				<%= f.label :category %><br>
				<%= f.select :category, ['Soup', 'Salad', 'Caesar', 'Burger', 'Sandwich', 'Seafood Sandwich', 'Veg Sandwich', 'Kids', 'Side', 'Beverage', 'Topping', 'Dessert', 'Feature'] %>
			</div>
			<br>
			<div class="form-section">
				<%= f.label :title %><br>
				<%= f.text_field :title %>
			</div>
			<br>
			<div class="form-section">
				<%= f.label :description %><br>
				<%= f.text_area :description %>
			</div>
			<br>
			<div class="form-section">
				<%= f.label :price %><br>
				<%= f.text_field :price, class: "price" %>
			</div>
			<br>
			<div class="form-section">
				<%= f.submit :create, class: "submit", data: {disable_with: "Submitting..."} %>
			</div>
		<% end %>
	</div>
</div>
